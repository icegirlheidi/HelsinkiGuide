<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/place_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/place_details_cotainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/place_details_list_item_margin"
            android:paddingRight="@dimen/place_details_list_item_margin"
            android:paddingTop="@dimen/place_details_list_item_extra_margin"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/details_place_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/place_details_list_item_margin"
            android:paddingRight="@dimen/place_details_list_item_margin"
            android:paddingTop="@dimen/place_details_list_item_margin"
            android:textAllCaps="true"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/secondary_title_text_size" />

        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_details_list_item_image_height"
            android:layout_marginTop="@dimen/place_details_list_item_margin"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/details_place_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/place_details_list_item_line_space"
            android:paddingLeft="@dimen/place_details_list_item_margin"
            android:paddingRight="@dimen/place_details_list_item_margin"
            android:paddingTop="@dimen/place_details_list_item_extra_margin"
            android:textSize="@dimen/place_details_description_text_size" />

        <TextView
            android:id="@+id/details_contact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/place_details_list_item_extra_margin"
            android:text="@string/contact"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/secondary_title_text_size" />

        <LinearLayout
            android:id="@+id/address_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/place_details_list_item_margin"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/colorSecondaryText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/telephone_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/place_details_list_item_margin"
                android:src="@drawable/ic_mobile" />

            <TextView
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/colorSecondaryText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/website_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/place_details_list_item_margin"
                android:src="@drawable/ic_web" />

            <TextView
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/colorSecondaryText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/place_details_list_item_extra_margin">

            <TextView
                android:id="@+id/details_more_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/more_info"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/secondary_title_text_size" />

            <LinearLayout
                android:id="@+id/open_time_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/place_details_list_item_margin"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/open_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/place_details_list_item_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorSecondaryText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/place_details_list_item_margin"
                    android:src="@drawable/ic_price" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/place_details_list_item_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorSecondaryText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>